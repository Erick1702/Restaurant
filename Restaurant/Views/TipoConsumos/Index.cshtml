@model IEnumerable<TipoConsumo>

@{
    ViewBag.Title = "Listado de Tipos de Consumo";
}

<h2>@ViewBag.Title</h2>

<p>
    <a asp-action="Create" class="btn btn-primary" data-voice="Crear Tipo de consumo">Crear nuevo</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@(item.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" data-voice="Editar Conusmo @item.Nombre">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" data-voice="Eliminar consumo @item.Nombre">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
