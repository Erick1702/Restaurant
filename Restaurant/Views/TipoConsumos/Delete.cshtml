@model TipoConsumo

@{
    ViewBag.Title = "Eliminar Tipo de Consumo";
}

<h2>@ViewBag.Title</h2>

<h3>¿Seguro que quieres eliminar este registro?</h3>

<div>
    <h4>@Model.Nombre</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-2">
            Activo
        </dt>
        <dd class="col-sm-10">
            @(Model.Activo ? "Sí" : "No")
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
