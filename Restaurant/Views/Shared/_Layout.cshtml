@using Restaurant.Servicios
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurant.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Restaurant</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole(Constantes.ROL_ADMINISTRADOR))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Listado">Usuarios</a>
                            </li>
                        }
                        @if (User.IsInRole(Constantes.ROL_ADMINISTRADOR))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Estados" asp-action="">Estados</a>
                            </li>
                        }

                        @if (User.IsInRole(Constantes.ROL_ADMINISTRADOR) || User.IsInRole(Constantes.ROL_MESERO))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Mesas" asp-action="">Mesas</a>
                            </li>
                        }
                        @if (User.IsInRole(Constantes.ROL_ADMINISTRADOR) || User.IsInRole(Constantes.ROL_COCINERO))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="TipoPlatos" asp-action="">Tipo de Platos</a>
                            </li>
                        }
                        @if (User.IsInRole(Constantes.ROL_ADMINISTRADOR) || User.IsInRole(Constantes.ROL_COCINERO))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Platos" asp-action="">Platos</a>
                            </li>
                        }
                        @if (User.IsInRole(Constantes.ROL_ADMINISTRADOR) || User.IsInRole(Constantes.ROL_MESERO) || User.IsInRole(Constantes.ROL_COCINERO))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Comandas" asp-action="">Comandas</a>
                            </li>
                        }
                        @if (User.IsInRole(Constantes.ROL_ADMINISTRADOR) || User.IsInRole(Constantes.ROL_CAJERO))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Facturas" asp-action="">Facturas</a>
                            </li>
                        }
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <partial name="LinksLogin"></partial>
					
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @await Html.PartialAsync("_SvgSprite")

        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Restaurant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <svg style="display: none;">
        <use href="~/icons/sprite.svg"></use>
    </svg>
    
</body>
</html>
