@model Factura

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Factura @Model.Id</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h2>Factura @Model.Id</h2>
    <p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Total:</strong> @Model.Total.ToString("C")</p>

    <h4>Detalle de la Comanda</h4>

    <table>
        <thead>
            <tr>
                <th>Plato</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Comanda.DetalleComandas)
            {
                <tr>
                    <td>@item.Plato?.Nombre</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Subtotal.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
