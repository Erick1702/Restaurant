@model IEnumerable<Factura>

@{
    ViewData["Title"] = "Facturas";
}

<h1>Facturas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Factura</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Comanda Id</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.ComandaId</td>
                <td>@item.Total.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

