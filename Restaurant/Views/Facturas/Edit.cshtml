@model Factura

@{
    ViewData["Title"] = "Editar Factura";
}

<h1>Editar Factura</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ComandaId" class="control-label">Comanda</label>
        <select asp-for="ComandaId" class="form-control" asp-items="ViewBag.ComandaId">
            <option value="">Seleccione una comanda</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Total" class="control-label">Total</label>
        <input asp-for="Total" class="form-control" readonly />
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

