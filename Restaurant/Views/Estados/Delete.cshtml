@model Estado

<h2>Eliminar Estado</h2>

<div>
    <h4>¿Está seguro de eliminar el estado @Model.Nombre?</h4>

    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>

        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@Model.Activo</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" data-voice="Eliminar Estado">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary" data-voice="Cancelar">Cancelar</a>
    </form>
</div>

