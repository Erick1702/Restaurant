@model Plato

<h2>Eliminar Plato</h2>

<div>
    <h4>¿Está seguro de eliminar el plato @Model.Nombre?</h4>

    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Tipo de Plato</dt>
        <dd class="col-sm-10">@Model.TipoPlato?.Nombre</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>

        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@Model.Activo</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
