@model Plato

<h2>@(ViewContext.RouteData.Values["action"].ToString() == "Create" ? "Crear Plato" : "Editar Plato")</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" data-voice="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoPlatoId">Tipo de Plato</label>
        <select asp-for="TipoPlatoId" asp-items="ViewBag.TipoPlatoId" class="form-control" data-voice="Tipo de plato"></select>
        <span asp-validation-for="TipoPlatoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" data-voice="Descripcion"/>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" data-voice="Precio"/>
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Activo" class="form-check-input" checked="checked"/>
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success" data-voice="Guardar plato">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary" data-voice="Cancelar">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

