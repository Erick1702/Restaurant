@model ComandaDetalleViewModel

@{
    ViewData["Title"] = "Detalle de Comanda";
}

<h2>Detalle de Comanda</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mesa:</dt>
        <dd class="col-sm-10">@Model.Mesa</dd>

        <dt class="col-sm-2">Usuario:</dt>
        <dd class="col-sm-10">@Model.Usuario</dd>

        <dt class="col-sm-2">Tipo Consumo:</dt>
        <dd class="col-sm-10">@Model.TipoConsumo</dd>

        <dt class="col-sm-2">Fecha:</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("g")</dd>
    </dl>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Plato</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Detalles)
        {
            <tr>
                <td>@detalle.Plato</td>
                <td>@detalle.Precio.ToString("C")</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.Subtotal.ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">TOTAL</th>
            <th>@Model.Total.ToString("C")</th>
        </tr>
    </tfoot>
</table>

<div class="mt-3">
    <a asp-action="GeneratePdf" asp-route-id="@Model.ComandaId" class="btn btn-danger">Generar PDF</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
