@model Mesa

<h2>Eliminar Mesa</h2>

<div>
    <h4>¿Está seguro de eliminar la mesa @Model.Numero?</h4>
    <dl class="row">
        <dt class="col-sm-2">Número</dt>
        <dd class="col-sm-10">@Model.Numero</dd>

        <dt class="col-sm-2">Capacidad</dt>
        <dd class="col-sm-10">@Model.Capacidad</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado?.Nombre</dd>

        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@Model.Activo</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
