@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-danger">Acceso Denegado</h1>
        <p class="lead">No tienes permisos suficientes para acceder a esta página.</p>

        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828843.png" alt="Acceso denegado" width="150" class="my-4" />

        <div>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Volver al inicio</a>
            @if (User.Identity?.IsAuthenticated == false)
            {
                <a class="btn btn-outline-secondary" asp-controller="Usuarios" asp-action="Login">Iniciar Sesión</a>
            }
        </div>
    </div>
</div>
